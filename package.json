{
  "packageManager": "bun@latest",
  "workspaces": ["rust-core", "unity-yaml", "doc-indexer"],
  "scripts": {
    "build": "bun run build:unity-yaml && bun run build:doc-indexer",
    "build:unity-yaml": "cd unity-yaml && bun run build",
    "build:doc-indexer": "cd doc-indexer && bun run build",
    "build:rust": "cd rust-core && bun run build",
    "build:all": "bun run build:rust || echo 'Rust build skipped' && bun run build",
    "test": "bun run test:unity-yaml && bun run test:doc-indexer",
    "test:unity-yaml": "cd unity-yaml && bun run test",
    "test:doc-indexer": "cd doc-indexer && bun run test",
    "test:quick": "cd unity-yaml && bun run test",
    "test:all": "bun run test && bun run test:integration",
    "test:integration": "cd unity-yaml && bash test/cli-integration.test.sh",
    "test:coverage": "cd unity-yaml && bun run test:coverage",
    "type-check": "cd unity-yaml && tsc --noEmit && cd ../doc-indexer && tsc --noEmit",
    "lint": "echo 'No linter configured'"
  },
  "devDependencies": {
    "@types/node": "^25.0.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {}
}
